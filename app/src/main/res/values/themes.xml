<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grayLight</item>
        <item name="colorSecondaryVariant">@color/grayLight</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialog</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:windowBackground">@color/white</item>


        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/sfpro_text_regular</item>
        <item name="fontFamily">@font/sfpro_text_regular</item>
        <item name="android:windowFullscreen">true</item>


    </style>


    <!-- region TextAppearance -->
    <style name="AppTheme.TextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:gravity">start|center</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.TextAppearance.Bold">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/sfrro_text_bold</item>
        <item name="fontFamily">@font/sfrro_text_bold</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:itemTextAppearance">@style/AppTheme.TextAppearance.Medium</item>
        <item name="firstBaselineToTopHeight">50sp</item>

    </style>

    <style name="AppTheme.TextAppearance.ExtraLight">
        <item name="android:fontFamily">@font/sf_compact_text_light</item>
        <item name="fontFamily">@font/sf_compact_text_light</item>
        <item name="android:textColor">@color/grayLight</item>
    </style>

    <style name="AppTheme.TextAppearance.Light">
        <item name="android:fontFamily">@font/sf_compact_text_light</item>
        <item name="fontFamily">@font/sf_compact_text_light</item>
        <item name="android:textColor">@color/grayLight</item>
    </style>

    <style name="AppTheme.TextAppearance.Medium">
        <item name="android:fontFamily">@font/sf_compact_text_medium</item>
        <item name="fontFamily">@font/sf_compact_text_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.TextAppearance.Regular">
        <item name="android:fontFamily">@font/sf_compact_text_regular</item>
        <item name="fontFamily">@font/sf_compact_text_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="AppTheme.TextAppearance.Error" parent="AppTheme.TextAppearance.Regular">
        <item name="android:textSize">12sp</item>
    </style>
    <!-- endregion -->


    <!-- region button -->
    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">@dimen/dim_10dp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/sfpro_text_regular</item>
        <item name="fontFamily">@font/sfpro_text_regular</item>
    </style>


    <style name="AppTheme.Button.Bold">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/sfrro_text_bold</item>
        <item name="fontFamily">@font/sfrro_text_bold</item>
    </style>

    <style name="AppTheme.Button.Accept" parent="AppTheme.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/dim_8dp</item>

    </style>

    <style name="AppTheme.Button.Decline" parent="AppTheme.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/dim_8dp</item>

    </style>


    <style name="AppTheme.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/sf_compact_text_medium</item>
        <!--        <item name="android:textColor">@color/colorPrimary</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Button.strokeWithIcon">
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeWidth">@dimen/dim_1dp</item>
        <item name="android:textStyle">normal</item>
        <item name="iconSize">@dimen/dim_24dp</item>
        <item name="iconPadding">@dimen/dim_8dp</item>
        <item name="android:paddingEnd">@dimen/dim_16dp</item>
        <item name="android:paddingStart">@dimen/dim_12dp</item>
        <item name="android:paddingTop">@dimen/dim_6dp</item>
        <item name="android:paddingBottom">@dimen/dim_6dp</item>
    </style>


    <style name="AppTheme.IconButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <!--        <item name="iconTint">@color/colorTextSW</item>-->
    </style>


    <style name="AppTheme.CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Button.Icon" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:layout_width">49dp</item>
        <item name="android:layout_height">49dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:padding">6dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="cornerRadius">@dimen/dim_8dp</item>
        <item name="android:fontFamily">@font/sfpro_text_regular</item>
        <item name="fontFamily">@font/sfpro_text_regular</item>

    </style>

    <style name="AppTheme.Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.ThemeOverlay.TextInputLayout" parent="">
        <!--        <item name="colorOnSurface">@color/colorEditBorder</item>-->
    </style>
    <!-- endregion -->

    <style name="AppBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheet</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="AppBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/AppBottomSheetShapeAppearanceBottomSheetDialog
        </item>
    </style>

    <style name="AppBottomSheetShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/dim_20dp</item>
        <item name="cornerSizeTopLeft">@dimen/dim_20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


</resources>